<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bcbssc.serverrepo.client.controller.TopMenuController">
   <menus>
      <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
        <items>
          <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="Exit" />
        </items>
      </Menu>
      <Menu fx:id="optionsMenu" mnemonicParsing="false" text="Options">
        <items>
          <MenuItem fx:id="expandAllMenuItem" mnemonicParsing="false" text="Expand All" />
            <MenuItem fx:id="shrinkAllMenuItem" mnemonicParsing="false" text="Shrink All" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" text="Settings" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <Menu fx:id="themeMenu" mnemonicParsing="false" text="Theme">
              <items>
                <MenuItem fx:id="themeDefaultMenuItem" mnemonicParsing="false" text="Default" />
              </items>
            </Menu>
        </items>
      </Menu>
      <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
        <items>
          <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
        </items>
      </Menu>
   </menus>
</MenuBar>
